* {
    font: "Hack Nerd Font 13";
    g-spacing: 10px;
    g-margin: 1px;
    b-color: #00000099;
    fg-color: #FFFFFFFF;
    fgp-color: #888888FF;
    b-radius: 12px;
    g-padding: 12px;
    hl-color: #FFFFFFFF;
    hlt-color: #000000FF;
    alt-color: #11111100;
    wbg-color: #000000aa;
    w-border: 0px solid;
    w-border-color: #FFFFFFFF;
    w-padding: 12px;
}

configuration {
  show-icons: true;
  display-drun: "";
  display-window: " ";
  drun-display-format: "{icon} {name}";
  font : "Hack Nerd Font 14";
  modi : "window,drun";
  icon-theme : "papirus";
}

listview {
    columns: 1;
    lines: 12;
    fixed-height: true;
    fixed-columns: true;
    cycle: false;
    scrollbar: false;
    border: 0px solid;
}

window {
    transparency: "real";
    width: 850px;
    border-radius: @b-radius;
    background-color: @wbg-color;
    border: @w-border;
    border-color: @w-border-color;
    padding: @w-padding;
}

prompt {
    text-color: @fg-color;
}

inputbar {
    children: ["prompt", "entry"];
    spacing: @g-spacing;
}

entry {
    placeholder: "Search Apps";
    text-color: @fg-color;
    placeholder-color: @fgp-color;
}

mainbox {
    spacing: @g-spacing;
    margin: @g-margin;
    padding: @g-padding;
    children: ["inputbar", "listview", "message"];
}

element {
    spacing: @g-spacing;
    margin: @g-margin;
    padding: @g-padding;
    border: 0px solid;
    border-radius: @b-radius;
    border-color: @b-color;
    background-color: transparent;
    text-color: @fg-color;
}

element normal.normal {
	background-color: transparent;
	text-color: @fg-color;
}

element alternate.normal {
	background-color: @alt-color;
	text-color: @fg-color;
}

element selected.active {
	background-color: @hl-color;
	text-color: @hlt-color;
}

element selected.normal {
	background-color: @hl-color;
	text-color: @hlt-color;
}

message {
    background-color: red;
    border: 0px solid;
}
